<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Trang thông tin giảng viên</title>
        <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="css/style.css">
    </head>
    <body>
        <div id="surface">
            <div id="header">
                <div class="container clear-fix">
                    <a href="localhost:8000" id="logo-page">
                        <span id="header-logo"></span>
                    </a>
                    <div id="header-user">
                        <form action="/controllers/authenticateController" method="post">
                            <span class="input-topbar" id="username-login">
                                <div class="login-input-lable">Email</div>
                                <input class="input-box" type="text" name="email" required>
                            </span>
                            <span class="input-topbar">
                                <div class="login-input-lable">Mật khẩu</div>
                                <input class="input-box" type="password" name="password" required>
                                <a id="forgot-password" href="">Quên mật khẩu?</a>
                            </span>
                            <span class="input-topbar" id="login-button">
                                <input type="submit" value="Submit">
                            </span>
                        </form>
                    </div>
                </div>
            </div>
            <div id="content" class="container clear-fix">
                <ul id="main-content">
                    <br>
                    <div>
                        <h1 id="slogan">Trang thông tin giảng viên</h1>
                    </div>
                    <br>
                    <div>
                        <input class="input-box" id="search-bar" type="text" placeholder="Bạn muốn tìm gì?...">
                        <span class="search-btn">
                            <a href="" id="main-search-bar-btn" class="search-btn">
                                <img src="./public\images\search.png">
                            </a>
                        </span> 
                    </div>
                    <br>
                    <br>
                    <nav class="navbar navbar-expand-sm bg-light">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link" href="unit">Đơn vị</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="field_research">Lĩnh vực nghiên cứu</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="employee">Giảng viên</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </body>
</html>
