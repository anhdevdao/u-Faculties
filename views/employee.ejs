<!DOCTYPE html>
<html>
    <head>
        <title>Cán bộ</title>
        <meta charset="utf-8">
        <link rel="stylesheet" type="text/css" href="css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="css/style.css">
    </head>
    <body>
        <div id="surface">
            <div class="container">
                <br>
                <div>
                    <span style="display: inline-block;">
                        <h1>Cán bộ</h1>
                    </span>
                    <div class="create-object">
                        <button type="button" class="btn btn-primary">Thêm mới</button>
                        <button type="button" class="btn btn-primary">Thêm từ Excel</button>
                    </div>
                </div>
                <br>
                <div style="float: right;">
                    <div class="employee-option" id="employee-select">
                        <label for="employee-list" class="label">Loại Cán Bộ </label>
                        <select value="employee-list">
                            <option>Bộ môn</option>
                            <option>Phòng thí nghiệm</option>
                        </select>
                    </div>
                    <div class="employee-option" id="degree-select">
                        <label for="degree-list" class="label">Học hàm, học vị </label>
                        <select value="degree-list">
                            <option>GS</option>
                            <option>ThS</option>
                            <option>TS</option>
                            <option>PGS. TS</option>
                        </select>
                    </div>
                    <div class="employee-option" id="unit-select">
                        <label for="unit-list" class="label">Đơn Vị </label>
                        <select value="unit-list">
                            <option>Bộ môn</option>
                            <option>Phòng thí nghiệm</option>
                        </select>
                    </div>
                </div>
                <br>
                <br>
                <br>
                <div class="col-md-12">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>TT</th>
                                <th>Mã CB</th>
                                <th>Họ và tên</th>
                                <th>Tài khoản</th>
                                <th>VNU email</th>
                                <th>Loại CB</th>
                                <th>Học vị</th>
                                <th>Đơn vị công tác</th>
                                <th>Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% employee.forEach((empl, index) => { %>
                                <tr>   
                                    <th><%= index + 1 %></th>
                                    <th><%= empl.employeeId %></th>
                                    <th><%= empl.name %></th>
                                    <th><%= empl.username %></th>
                                    <th><%= empl.email %></th>
                                    <th><%= empl.employeeType%></th>
                                    <th><%= empl.degree %></th>
                                    <th><%= empl.company %></th>
                                    <th><%= empl.interactive %></th>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>                
            </div>
        </div>
    </body>
</html>